{
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "verbatimModuleSyntax": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
